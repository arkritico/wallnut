      "id": "ELEC_R279",
      "reference": "Portaria 1532/2008, Art. 186 n.3",
      "category": "Instalações Elétricas",
      "subcategory": "Ralos escoamento estacionamentos enterrados",
      "rule_text": "Ralos em pisos enterrados UT-II: mínimo 1 por cada 40 veículos",
      "parameters": {
        "ralos_por_veiculos": 40,
        "min_ralos": 1
      },
      "validation_type": "formula",
      "severity": "mandatory",
      "formula": "n_ralos >= max(1, ceil(n_veiculos / 40))",
      "lookup_tables": null,
      "error_message": "Número de ralos de escoamento insuficiente (mín 1 por 40 veículos)",
      "success_message": "✓ Conforme: Ralos escoamento estacionamentos enterrados",
