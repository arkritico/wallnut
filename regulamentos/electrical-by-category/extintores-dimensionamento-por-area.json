{
  "category": "Extintores dimensionamento por área",
  "rules": [
    {
      "id": "ELEC_R263",
      "reference": "Portaria 1532/2008, Art. 163 n.2",
      "category": "Instalações Elétricas",
      "subcategory": "Extintores dimensionamento por área",
      "rule_text": "Extintores: 18L agente extintor padrão/500m² E 1 por 200m² (mín 2 por piso)",
      "parameters": {
        "litros_por_500m2": 18,
        "um_por_m2": 200,
        "min_por_piso": 2,
        "unit": "L/m²"
      },
      "validation_type": "formula",
      "severity": "mandatory",
      "formula": "n_extintores >= max(2, ceil(area_piso / 200)) and volume_agente >= ceil(area_piso/500)*18",
      "lookup_tables": null,
      "error_message": "Número ou volume de extintores insuficiente para a área do piso",
      "success_message": "✓ Conforme: Extintores dimensionamento por área",
      "source": {
        "regulation": "Portaria 1532/2008",
        "article": "Portaria 1532/2008, Art. 163 n.2",
        "version": "3.0",
        "date": "2026-02-15"
      },
      "metadata": {
        "complexity": "complex",
        "requires_calculation": true,
        "application_scope": [
          "Geral"
        ]
      }
    }
  ]
}